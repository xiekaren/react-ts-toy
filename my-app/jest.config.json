{
    "notify": true,
    "testMatch": [
        "<rootDir>/src/**/*.test.tsx",
        "<rootDir>/src/**/*.test.ts"
    ],
    "modulePaths": [
        "<rootDir>/src",
        "<rootDir>/node_modules"
    ],
    "moduleDirectories": [
        "node_modules"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.ts",
    "transform": {
        ".(ts|tsx|js)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
        "^.+\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.ts",
        "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/styleMock.ts"
    }
}